<h1><%= @question.title %></h1>

<p><%= @question.body %></p>
<br />

<%= link_to "Edit", edit_question_path(@question), class: 'btn btn-success' %>

<% if !@question.resolved %>
  <p>Question Status: <strong>Open</strong></p>
<% else %>
  <p>Question Status: <strong>Resolved</strong></p>
<% end %>
