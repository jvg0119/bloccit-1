<h1>New Post Summary</h1>
 
<div class="row">
  <div class="col-md-8">
    <%= form_for [@topic, @post, @summary] do |f| %>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control', placeholder: "Enter post summary" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>